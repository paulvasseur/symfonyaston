{% block header %}
    {% include ':default:header.html.twig' %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p>Want to get in touch with me? Fill out the form below to send me a message and I will try to get back to you within 24 hours!</p>
                <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
                <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
                <!-- NOTE: To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
                
    {{ form_start(form,{'attr':{'novalidate': 'novalidate'} } ) }}
    
    
     <div class="row control-group">
             <div class="form-group col-xs-12 floating-label-form-group controls">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'id':'name', 'attr':{'placeholder': 'app.name'|trans|capitalize, 'class':'form-control'} }) }}
                          <!-- <input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">-->
                      <p class="help-block text-danger">
                      {% for error in form.name.vars.errors %}
                      <p>{{error.message}}</p>
                      {% endfor %}
             </p>
             </div>
     </div>
     
     <div class="row control-group">
             <div class="form-group col-xs-12 floating-label-form-group controls">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'id':'email','attr':{'placeholder': 'app.email'|trans|capitalize, 'class':'form-control' } })  }}
                         <!--<input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">-->
                      <p class="help-block text-danger">
                        {% for error in form.email.vars.errors %}
                      <p>{{error.message}}</p>
                      {% endfor %}</p>
             </div>
     </div>                    
    
    <div class="row control-group">
             <div class="form-group col-xs-12 floating-label-form-group controls">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone, {'id':'phone','attr':{'placeholder': 'app.phone'|trans|capitalize, 'class':'form-control' } })  }}
                          <!-- <input type="text" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter your name.">-->
                      <p class="help-block text-danger">
                        {% for error in form.phone.vars.errors %}
                      <p>{{error.message}}</p>
                      {% endfor %}
                        </p>
             </div>
     </div>
                          
     <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            {{ form_label(form.message) }}
                             {{ form_widget(form.message, {'id':'message','attr':{'rows': 5, 'placeholder': 'app.message'|trans|capitalize, 'class':'form-control' } })  }}
                            <p class="help-block text-danger">
                              {% for error in form.message.vars.errors %}
                      <p>{{error.message}}</p>
                            {% endfor %}</p>
                        </div>
     </div><br>
                             <div id="success"></div>
      <div class="row">
                        <div class="form-group col-xs-12">
                            
                            {{ form_widget(form.send, {'label': 'Envoyer','attr':{ 'class':'btn btn-default' } })  }}
                        </div>
       </div>                      
    
    
    
    
    
    
    {{form_end(form)}}
    
        </div>
        </div>
    </div>

{% endblock%}
{% block footer %}
    {% include ':default:footer.html.twig'%}
{% endblock%}
 