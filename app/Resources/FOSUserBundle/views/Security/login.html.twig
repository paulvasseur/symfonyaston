  <body>
{% trans_default_domain 'FOSUserBundle' %}
    <div class="container">

   
       

        <form class="form-group" action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
            
        <h2 class="form-signin-heading">Connectez-vous</h2>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input  class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control"  type="password" id="password" name="_password" required="required" />

           
            <label  for="remember_me">
             <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
            </label>

            <input type="submit" id="_submit" class="btn btn-lg btn-primary btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div> <!-- /container -->

        
